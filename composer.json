{
    "name": "jiny/html",
    "description": "jiny object html",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "hojinlee",
            "email": "infohojin@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "autoload": {
        "psr-4": {
            "Jiny\\Html\\": "app/"
        },
        "files": [
            "app/Helpers/helpers.php",
            "app/Helpers/constants.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Jiny\\Html\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jiny\\Html\\JinyHtmlServiceProvider"
            ]
        }
    }

}
